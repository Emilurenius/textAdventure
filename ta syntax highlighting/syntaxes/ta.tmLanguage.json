{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "textAdventure",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#statements"
		},
		{
			"include": "#supressedStatements"
		},
		{
			"include": "#scopes"
		},
		{
			"include": "#bookmarks"
		}
	], 
	"repository": {
		"statements": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "!\\w*"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment",
					"match": "//(.*)"
				}
			]
		},
		"scopes": {
			"patterns": [
				{
					"name": "constant.language",
					"match": "init:"
				},
				{
					"name": "constant.language",
					"match": ":init"
				},
				{
					"name": "constant.language",
					"match": "story:"
				},
				{
					"name": "constant.language",
					"match": ":story"
				}
			]
		},
		"bookmarks": {
			"patterns": [
				{
					"name": "constant.language",
					"match": "#\\w*"
				}
			]
		},
		"supressedStatements": {
			"patterns": [
				{
					"name": "variable.parameter",
					"match": "-\\w*"
				}
			]
		}
	},
	"scopeName": "source.ta"
}